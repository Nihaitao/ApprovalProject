    public class ApprovalTypeModel
    {
        public int Approval_ID { get; set; }
        public List<ApprovalVisrange> Visrange { get; set; }
        public List<ApprovalCondition> Condition { get; set; }
    }
    /// <summary>
    /// 可见范围
    /// </summary>
